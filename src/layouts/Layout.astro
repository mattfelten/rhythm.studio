---
import '../styles/global.css';
const { class: className, title: pageTitle, ...rest } = Astro.props;
const title = [pageTitle && `${pageTitle} `, 'Rhythm ⚡️'].join(' ');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class:list={['bg-background text-primary p-8', className]}
		{...rest}
	>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	body {
		height: auto;
		min-height: 100%;
	}
</style>
